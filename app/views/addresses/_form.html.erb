<%= form_for @address do |f| %>
  <%= render partial: 'shared/error_messages', locals: {object: @address} %>

  <%= f.label :line_1, "Address, line 1" %>
  <%= f.text_field :line_1 %><br>

  <%= f.label :line_2, "Address, line 2" %>
  <%= f.text_field :line_2 %><br>

  <%= f.label :city %>
  <%= f.text_field :city %><br>

  <%= f.label :borough %>
  <%= f.select :borough, Address::BOROUGHS  %><br>

  <%= f.label :zip %>
  <%= f.text_field :zip %><br>
  <br>

  <%= f.submit %>
<% end %>
